---
import { Image } from "astro:assets";
import HeroImage from "../assets/homepage-banner.jpg";
---

<header>
  <div
    class="relative isolate pt-14 overflow-hidden h-[101vh] text-white flex items-center"
  >
    <Image
      src={HeroImage}
      alt="A description of my image."
      class="absolute top-0 w-full h-full object-cover -z-50"
    />
    <div class="absolute inset-0 bg-dark-blue/60 -z-40 to-40%"></div>
    <div class="flex w-full justify-center">
      <div class="px-5 font-medium text-center flex flex-col gap-4 lg:gap-8">
        <h2 class="text-lg animate-fade-down">Welcome to High Tide Aviation</h2>
        <h1
          class="text-4xl sm:text-5xl lg:text-7xl uppercase max-w-4xl animate-fade-down"
        >
          Southport's Leading Pilot Training Center
        </h1>
        <div
          class="flex flex-col md:flex-row items-center gap-5 w-full justify-center md:gap-10 animate-fade-up"
        >
          <a
            href="#"
            class="block uppercase py-4 px-14 bg-mustard-yellow w-fit rounded-full hover:bg-medium-blue duration-300"
            >Book Now</a
          >
          <a
            href="#"
            class="block uppercase py-4 px-14 bg-white w-fit rounded-full text-dark-blue hover:bg-medium-blue duration-300 hover:text-white"
            >Read More</a
          >
        </div>
      </div>
    </div>
  </div>
</header>
