---
import { IoIosArrowForward } from "react-icons/io";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { imagePath, heading, subheading, description } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}",
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`,
  );
---

<div>
  <Image
    src={images[imagePath]()}
    alt={heading}
    class="w-full h-60 object-cover"
    quality={10}
  />
  <div
    class="flex flex-col shadow-md bg-white w-11/12 py-5 px-8 -top-10 relative"
  >
    <a
      class="absolute right-5 -top-5 bg-mustard-yellow p-3 hover:bg-dark-blue duration-500 cursor-pointer"
    >
      <IoIosArrowForward className="text-white" />
    </a>
    <h2 class="uppercase text-sm text-medium-blue font-medium tracking-widest">
      {heading}
    </h2>
    <h3 class="text-2xl font-semibold leading-tight text-dark-blue">
      {subheading}
    </h3>
    <p class="text-gray-500 leading-relaxed mt-5">{description}</p>
  </div>
</div>
