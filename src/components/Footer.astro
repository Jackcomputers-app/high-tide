---
const today = new Date();
import { Image } from "astro:assets";
import highTideLogo from "../assets/high-tide-aviation-logo-gradation.png";
import { FaPhone } from "react-icons/fa";
import { MdEmail } from "react-icons/md";
import { IoLocationSharp } from "react-icons/io5";
import {
  ADDRESS_LINE_1,
  ADDRESS_LINE_1_2,
  ADDRESS_LINE_2,
  ADDRESS_LINE_2_2,
  EMAIL_ADDRESS,
  FACEBOOK_URL,
  INSTAGRAM_URL,
  PHONE_NUMBER,
  PHONE_NUMBER_2,
  YOUTUBE_URL,
} from "../consts.ts";
import { navbarLinks } from "../data/navbarLinks";
---

<footer class="bg-dark-blue text-white">
  <div class="max-w-7xl mx-auto px-5">
    <div
      class="grid md:grid-cols-2 lg:grid-cols-[3fr_1fr_1fr_1.5fr] py-20 gap-8 justify-between"
    >
      <div class="flex flex-col gap-5">
        <a class="w-fit" href="/">
          <Image
            src={highTideLogo}
            alt="High Tide Aviation Logo"
            class="h-20 w-fit"
            quality={10}
          />
        </a>
        <p class="tracking-wide">
          High Tide Aviation offers flight schools and training facilities at
          both Cape Fear Regional Jetport in Southport, NC, and McKinnon St.
          Simons Island Airport on St. Simons Island, Georgia. Specializing in
          both airplane and helicopter training, we provide professional pilot
          training for commercial licenses, instrument ratings, helicopters,
          flight instruction, and more. Pursue your aviation dreams through our
          zero-to-hero flight training programs. Book an intro flight over North
          Carolina or Georgiaâ€™s scenic coastlines, or call to tour our premier
          flight schools at either location today!
        </p>
      </div>
      {
        navbarLinks.slice(1, 3).map((link) => (
          <div class="flex flex-col gap-3">
            <h3 class="font-medium">{link.name}</h3>
            <ul class="flex flex-col gap-2 text-white/50">
              {link.submenu.map((item) => (
                <li>
                  <a class="hover:text-white duration-300" href={item.link}>
                    {item.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
      <div class="flex flex-col gap-3">
        <h3 class="font-medium">Contact</h3>
        <ul class="flex flex-col gap-1 text-white/50">
          <li class="flex gap-2 items-center">
            <MdEmail className="size-4 text-mustard-yellow" />
            <a
              class="hover:text-white duration-300"
              href=`mailto:${EMAIL_ADDRESS}`>{EMAIL_ADDRESS}</a
            >
          </li>
          <li class="flex gap-2 items-center mt-4">
            <FaPhone className="size-4 text-mustard-yellow" />
            <a class="hover:text-white duration-300" href=`tel:${PHONE_NUMBER}`
              >{PHONE_NUMBER}</a
            >
          </li>
          <li class="flex gap-2">
            <IoLocationSharp
              className="size-4 mt-1 shrink-0 text-mustard-yellow"
            />
            <a class="hover:text-white duration-300" href="#">
              <p>{ADDRESS_LINE_1}</p>
              <p>{ADDRESS_LINE_2}</p>
            </a>
          </li>
          <li class="flex gap-2 items-center mt-4">
            <FaPhone className="size-4 text-mustard-yellow" />
            <a
              class="hover:text-white duration-300"
              href=`tel:${PHONE_NUMBER_2}`>{PHONE_NUMBER_2}</a
            >
          </li>
          <li class="flex gap-2">
            <IoLocationSharp
              className="size-4 mt-1 shrink-0 text-mustard-yellow"
            />
            <a class="hover:text-white duration-300" href="#">
              <p>{ADDRESS_LINE_1_2}</p>
              <p>{ADDRESS_LINE_2_2}</p>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div
      class="flex flex-col gap-5 md:flex-row py-8 border-t border-white/20 items-center justify-between"
    >
      <p class="text-center text-white/50">
        &copy; Copyright {today.getFullYear()} by High Tide Aviation. All rights
        reserved.
      </p>
      <div class="flex gap-3">
        <a
          href={FACEBOOK_URL}
          target="_blank"
          class="bg-light-blue/30 rounded-full p-2 hover:bg-white group duration-500"
        >
          <span class="sr-only">Facebook</span>
          <svg
            class="size-5 group-hover:text-mustard-yellow duration-500"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
              clip-rule="evenodd"></path>
          </svg>
        </a>
        <a
          href={INSTAGRAM_URL}
          target="_blank"
          class="bg-light-blue/30 rounded-full p-2 hover:bg-white group duration-500"
        >
          <span class="sr-only">Instagram</span>
          <svg
            class="size-5 group-hover:text-mustard-yellow duration-500"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"
              clip-rule="evenodd"></path>
          </svg>
        </a>
        <a
          href={YOUTUBE_URL}
          target="_blank"
          class="bg-light-blue/30 rounded-full p-2 hover:bg-white group duration-500"
        >
          <span class="sr-only">YouTube</span>
          <svg
            class="size-5 group-hover:text-mustard-yellow duration-500"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.746 22 12 22 12s0 3.255-.418 4.814a2.504 2.504 0 0 1-1.768 1.768c-1.56.419-7.814.419-7.814.419s-6.255 0-7.814-.419a2.505 2.505 0 0 1-1.768-1.768C2 15.255 2 12 2 12s0-3.255.417-4.814a2.507 2.507 0 0 1 1.768-1.768C5.744 5 11.998 5 11.998 5s6.255 0 7.814.418ZM15.194 12 10 15V9l5.194 3Z"
              clip-rule="evenodd"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
