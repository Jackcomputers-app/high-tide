---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Banner from "../assets/beech-baron-b55-front.jpg";
import { FaCheckCircle } from "react-icons/fa";
import { PHONE_NUMBER, EMAIL_ADDRESS } from "../consts";
---

<BaseLayout siteTitle="Quiz Successfully Submitted">
  <Header
    slot="header"
    image={Banner}
    title="Quiz Successfully Submitted"
    alt="Beech Baron B55 Front View"
  />

  <section class="py-16 px-5">
    <div class="flex flex-col items-center max-w-5xl mx-auto text-center gap-8">
      <FaCheckCircle className="text-9xl text-medium-blue" />
      <p class="text-gray-600 leading-loose">
        Thank you for taking our Pilot Readiness Quiz! We are looking forward to
        working with you soon. We will review your quiz and get back with you
        within 1-5 business days.
      </p>
      <p class="text-gray-600 leading-loose">
        You can also give us a call at <a
          class="hover:text-dark-blue hover:underline duration-300"
          href=`tel:${PHONE_NUMBER}`>{PHONE_NUMBER}</a
        >.
      </p>
    </div>
  </section>
</BaseLayout>
