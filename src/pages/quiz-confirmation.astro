---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Banner from "../assets/beech-baron-b55-front.jpg";
import { FaCheckCircle } from "react-icons/fa";
import { PHONE_NUMBER, EMAIL_ADDRESS } from "../consts";
---

<BaseLayout
  siteTitle="Flight Training Readiness Assessment Successfully Submitted | High Tide Aviation"
  siteDescription="Thank you for taking our Pilot Readiness Quiz! We are looking forward to working with you soon. We will review your quiz and get back with you within 1-3 business days."
  siteKeywords="quiz submission, High Tide Aviation, pilot readiness quiz, pilot training quiz, aviation quiz, flight school quiz, commercial pilot training, private pilot certification, flight instructor training, aviation services, helicopter training, aviation resources"
>
  <Header
    slot="header"
    image={Banner}
    title="Flight Training Readiness Assessment Successfully Submitted"
    alt="Beech Baron B55 Front View"
  />

  <section class="py-16 px-5">
    <div class="flex flex-col items-center max-w-5xl mx-auto text-center gap-8">
      <FaCheckCircle className="text-9xl text-medium-blue" />
      <p class="text-gray-600 leading-loose">
        Thank you for taking our Flight Training Readiness Assessment! We’re
        excited to help you begin your journey toward becoming a pilot.
      </p>
      <p class="text-gray-600 leading-loose">
        You’ve been <strong class="text-dark-blue">rewarded with 15% off</strong
        > your next Discovery Flight. Please <a
          class="hover:text-dark-blue text-dark-blue font-medium hover:underline duration-300"
          href="/contact-us"
        >
          reach out
        </a> to us to claim your discount and book your flight.
      </p>
      <p class="text-gray-600 leading-loose">
        You can also contact us at
        <a
          class="hover:text-dark-blue text-dark-blue font-medium hover:underline duration-300"
          href=`tel:${PHONE_NUMBER}`
        >
          {PHONE_NUMBER}
        </a>.
      </p>
    </div>
  </section>
</BaseLayout>
