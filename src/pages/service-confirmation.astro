---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Banner from "../assets/beech-baron-b55-front.jpg";
import { FaCheckCircle } from "react-icons/fa";
import { PHONE_NUMBER, EMAIL_ADDRESS } from "../consts";
---

<BaseLayout
  siteTitle="Thank You for Requesting our Services | High Tide Aviation"
  siteDescription="Thank you for reaching out to High Tide Aviation. Your service request has been successfully submitted, and our team is already reviewing the details. One of our aviation specialists will contact you shortly to confirm your request, answer any questions, and provide the next steps. We appreciate your trust in us to keep your aircraft safe, compliant, and ready to fly. In the meantime, feel free to explore more about our services or contact us directly if you need immediate assistance."
  siteKeywords="Service Request Confirmation, St Simons Island - GA, Aircraft annual inspections, Pre-purchase aircraft inspections, Aircraft maintenance and repairs, AOG aircraft service, Aircraft ferrying service, Aviation repair services, High Tide Aviation, Aircraft services North Carolina, Aircraft repair Southport NC"
>
  <Header
    slot="header"
    image={Banner}
    title="Thank You for Requesting our Services"
    alt="Beech Baron B55 Front"
    ctaText="Fill Out our Quiz for quick assistance"
    ctaLink="/quiz-form"
  />

  <section class="py-16 px-5">
    <div class="flex flex-col items-center max-w-5xl mx-auto text-center gap-8">
      <FaCheckCircle className="text-9xl text-medium-blue" />
      <p class="text-gray-600 leading-loose">
        Thank you for requesting our services. We are looking
        forward to working with you soon. We will review your message and get
        back with you within 1-3 business days.
      </p>
      <p class="text-gray-600 leading-loose">
        You can also give us a call at <a
          class="hover:text-dark-blue hover:underline duration-300"
          href=`tel:${PHONE_NUMBER}`>{PHONE_NUMBER}</a
        >.
      </p>
    </div>
  </section>
</BaseLayout>
