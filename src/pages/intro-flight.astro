---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Banner from "../assets/cessna-172-flying-over-st-simons-island.jpg";
import DiscoveryFlightCard from "../components/DiscoveryFlightCard.astro";
import { discoveryFlights } from "../data/discoveryFlights";
import ToursCTA from "../components/ToursCTA.astro";
---

<BaseLayout
  siteTitle="Book an Intro Flight at High Tide"
  siteDescription="Experience the thrill of flight with an Introductory Flight at High Tide Aviation. Whether you're exploring aviation as a hobby or considering a career in flying, our introductory flight lessons provide a hands-on opportunity to take the controls of an aircraft with a certified instructor by your side. Available in Southport, St. Simons Island, and Wallace, this introductory flight is the perfect first step toward achieving your pilot goals. Book your flight today and begin your adventure in the skies."
  siteKeywords="Introductory flight Southport, St Simons Island flight experience, Wallace NC intro flight, discover flying, pilot intro lesson, learn to fly, aviation experience, first flight lesson, flying lesson Southport, intro flight training, intro to aviation, High Tide Aviation flight experience, private pilot intro flight"
>
  <Header
    slot="header"
    image={Banner}
    title="Book an Intro Flight at High Tide"
    alt="Cessna 172 flying over St Simons Island"
  />

  <section class="py-16 px-5">
    <div class="flex flex-col items-center">
      <h2 class="uppercase text-medium-blue font-bold tracking-widest">
        Flight and Location Selection
      </h2>
      <h3 class="text-5xl text-center text-dark-blue font-bold leading-tight">
        Choose Your Intro Flight
      </h3>
    </div>

    <div
      class="grid gap-8 mt-5 max-w-xs sm:grid-cols-2 sm:max-w-2xl lg:grid-cols-3 lg:max-w-7xl mx-auto"
    >
      {
        discoveryFlights.map((discoveryFlight) => (
          <DiscoveryFlightCard
            name={discoveryFlight.name}
            price={discoveryFlight.price}
            imagePath={discoveryFlight.imagePath}
            location={discoveryFlight.location}
            url={discoveryFlight.url}
          />
        ))
      }
    </div>
  </section>

  <ToursCTA />
</BaseLayout>
