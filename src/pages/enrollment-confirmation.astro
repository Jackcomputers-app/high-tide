---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Banner from "../assets/beech-baron-b55-front.jpg";
import { FaCheckCircle } from "react-icons/fa";
import { PHONE_NUMBER, EMAIL_ADDRESS } from "../consts";
---

<BaseLayout
  siteTitle="Thank You for Applying to Enroll"
  siteDescription="Thank you for enrolling at High Tide Aviation! Your enrollment has been successfully processed, and weâ€™re excited to have you on board. Get ready to embark on your aviation journey with expert instructors and comprehensive training programs. Whether you're pursuing a commercial pilot, flight instructor, or private pilot certification, we are here to support you every step of the way. Keep an eye on your email for further details and next steps in your training."
  siteKeywords="enrollment confirmation, High Tide Aviation, pilot training enrollment, flight school application, commercial pilot training, private pilot certification, flight instructor training, aviation services, helicopter training, aviation resources, aviation training programs, flight school programs"
>
  <Header
    slot="header"
    image={Banner}
    title="Thank You for Applying to Enroll"
    alt="Beech Baron B55 Front"
  />

  <section class="py-16 px-5">
    <div class="flex flex-col items-center max-w-5xl mx-auto text-center gap-8">
      <FaCheckCircle className="text-9xl text-medium-blue" />
      <p class="text-gray-600 leading-loose">
        Thank you for applying to enroll at High Tide Aviation. We are looking
        forward to working with you soon. We will review your message and get
        back with you within 1-5 business days.
      </p>
      <p class="text-gray-600 leading-loose">
        You can also give us a call at <a
          class="hover:text-dark-blue hover:underline duration-300"
          href=`tel:${PHONE_NUMBER}`>{PHONE_NUMBER}</a
        >.
      </p>
    </div>
  </section>
</BaseLayout>
