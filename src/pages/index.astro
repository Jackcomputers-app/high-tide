---
import HomepageHeader from "../components/HomepageHeader.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { TbAward } from "react-icons/tb";
import { BsAirplaneEngines } from "react-icons/bs";
import { IoBookOutline } from "react-icons/io5";
import { FaRegStar } from "react-icons/fa6";
import { FaPhoneAlt } from "react-icons/fa";
import { Image } from "astro:assets";
import Feature2 from "../assets/feature-2.jpg";
import Feature3 from "../assets/feature-3.jpg";
import Thumbnail from "../assets/video-thumbnail.png";
import { PHONE_NUMBER } from "../consts.ts";
import { flightPrograms } from "../data/flightPrograms";
import FlightProgramCard from "../components/FlightProgramCard.astro";
import { IoIosArrowForward } from "react-icons/io";
import { stats } from "../data/stats.js";
import StatCard from "../components/StatCard.astro";
import ReviewCard from "../components/ReviewCard.astro";
import { reviews } from "../data/reviews.js";
---

<BaseLayout>
  <HomepageHeader slot="header" />

  <section class="py-24 bg-mustard-yellow px-5">
    <div class="grid lg:grid-cols-4 sm:grid-cols-2 max-w-7xl mx-auto gap-10">
      <div
        class="border border-white/50 py-8 px-12 flex flex-col gap-5 hover:bg-white duration-700 group cursor-pointer"
      >
        <TbAward className="size-14 text-medium-blue" />
        <p
          class="text-lg text-dark-blue uppercase font-semibold tracking-widest duration-700"
        >
          Why High Tide
        </p>
      </div>
      <div
        class="border border-white/50 py-8 px-12 flex flex-col gap-5 hover:bg-white duration-700 group cursor-pointer"
      >
        <BsAirplaneEngines className="size-14 text-medium-blue" />
        <p
          class="text-lg text-dark-blue uppercase font-semibold tracking-widest duration-700"
        >
          New to Flying
        </p>
      </div>
      <div
        class="border border-white/50 py-8 px-12 flex flex-col gap-5 hover:bg-white duration-700 group cursor-pointer"
      >
        <IoBookOutline className="size-14 text-medium-blue" />
        <p
          class="text-lg text-dark-blue uppercase font-semibold tracking-widest duration-700"
        >
          Download our free eBook!
        </p>
      </div>
      <div
        class="border border-white/50 py-8 px-12 flex flex-col gap-5 hover:bg-white duration-700 group cursor-pointer"
      >
        <FaRegStar className="size-14 text-medium-blue" />
        <p
          class="text-lg text-dark-blue uppercase font-semibold tracking-widest duration-700"
        >
          Student Reviews
        </p>
      </div>
    </div>
  </section>

  <section class="py-24 px-5">
    <div
      class="max-w-xl gap-10 lg:max-w-7xl mx-auto flex flex-col lg:flex-row items-center lg:gap-5"
    >
      <div class="flex flex-col flex-1">
        <h2 class="uppercase text-medium-blue font-bold tracking-widest">
          Why High Tide?
        </h2>
        <h3 class="text-5xl text-dark-blue font-bold leading-tight">
          Lorem ipsum dolor sit amet consectetur adipisicing elit.
        </h3>
        <p class="text-gray-500 leading-relaxed my-5">
          Lorem ipsum dolor sit, amet consectetur adipisicing elit. Enim autem
          perspiciatis alias incidunt, asperiores quis in? Praesentium, commodi!
          Earum facere enim minus nam nisi iste reprehenderit labore repellendus
          laborum error?
        </p>
        <div class="flex flex-col sm:flex-row items-center gap-5">
          <button
            class="block font-medium uppercase py-4 px-14 bg-dark-blue w-fit rounded-full text-white hover:bg-mustard-yellow duration-300"
          >
            Book Now
          </button>
          <div class="flex items-center gap-3">
            <a
              href=`tel:${PHONE_NUMBER}`
              class="group border p-4 border-mustard-yellow rounded-full hover:bg-mustard-yellow hover:border-white duration-300 cursor-pointer"
            >
              <FaPhoneAlt
                className="size-5 group-hover:text-white text-mustard-yellow duration-300"
              />
            </a>
            <div class="flex flex-col">
              <p class="text-sm text-gray-500 uppercase tracking-widest">
                Call Anytime
              </p>
              <a
                href=`tel:${PHONE_NUMBER}`
                class="font-medium text-lg text-dark-blue hover:text-mustard-yellow duration-300"
                >{PHONE_NUMBER}</a
              >
            </div>
          </div>
        </div>
      </div>
      <div class="flex-1">
        <video controls poster={Thumbnail.src} class="w-full">
          <source
            src="https://dl.dropboxusercontent.com/scl/fi/z05enxbp8tx5fbw9v5kuv/Kyle-Sapp-Testimonial.mp4?rlkey=jp08lj9zj318cwzw0iizmx97e&dl=0"
            type="video/mp4"
          />
          Your browser does not support the video tag.
        </video>
      </div>
    </div>
  </section>

  <section class="py-24 px-5">
    <div class="max-w-xl lg:max-w-7xl mx-auto">
      <div class="flex flex-col lg:flex-row gap-10">
        <div
          class="flex flex-col lg:flex-1 p-12 bg-gradient-to-tr text-white from-dark-blue to-mustard-yellow to-90% from-20% via-medium-blue"
        >
          <h2 class="uppercase tracking-widest font-semibold text-white/70">
            Lorem
          </h2>
          <h3 class="text-3xl font-bold">Start Flight Training Today</h3>
          <p class="py-8 leading-loose text-white/70">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas vel
            deleniti ipsa odit aliquid incidunt error quos, iste illum odio et
            possimus a iure aliquam, dolorum totam. Accusantium, illo veritatis!
          </p>
          <button
            class="block font-medium uppercase py-4 px-14 bg-white w-fit rounded-full text-dark-blue hover:bg-medium-blue hover:text-white duration-300"
          >
            Enroll Now
          </button>
        </div>
        <div
          class="flex flex-col min-h-[28rem] lg:flex-1 gap-5 justify-end bg-gradient-to-t to-40% from-medium-blue p-12 relative text-white"
        >
          <Image
            src={Feature2}
            alt="Feature 2"
            class="absolute w-full h-full object-cover top-0 left-0 -z-10"
          />
          <h3 class="text-3xl font-bold">Meet Our Fleet</h3>
        </div>
        <div
          class="flex flex-col min-h-[28rem] lg:flex-1 gap-5 justify-end bg-gradient-to-t to-40% from-medium-blue p-12 relative text-white"
        >
          <Image
            src={Feature3}
            alt="Feature 3"
            class="absolute w-full h-full object-cover top-0 left-0 -z-10"
          />
          <h3 class="text-3xl font-bold">Visit High Tide Aviation</h3>
        </div>
      </div>
    </div>
  </section>

  <section class="py-24 px-5 text-white bg-dark-blue relative overflow-hidden">
    <IoBookOutline
      className="size-[40rem] right-16 top-0 text-white/10 absolute"
    />
    <div class="max-w-xl lg:max-w-7xl mx-auto relative z-10">
      <h2 class="uppercase text-mustard-yellow font-bold tracking-widest">
        Free eBook
      </h2>
      <h3 class="text-5xl font-bold leading-tight">
        Get Your FREE Quick Start Guide
      </h3>
      <div class="max-w-3xl grid lg:grid-cols-2 gap-5 my-10">
        <input
          class="bg-[#00215D] text-white/70 py-4 px-6 w-full outline-none placeholder:text-white/50"
          type="text"
          name="first-name"
          id="first-name"
          placeholder="First Name"
        />
        <input
          class="bg-[#00215D] text-white/70 py-4 px-6 w-full outline-none placeholder:text-white/50"
          type="text"
          name="last-name"
          id="last-name"
          placeholder="Last Name"
        />
        <input
          class="bg-[#00215D] text-white/70 py-4 px-6 w-full outline-none placeholder:text-white/50"
          type="email"
          name="email"
          id="email"
          placeholder="Email"
        />
        <input
          class="bg-[#00215D] text-white/70 py-4 px-6 w-full outline-none placeholder:text-white/50"
          type="tel"
          name="phone"
          id="phone"
          placeholder="Phone"
        />
      </div>
      <a
        href="#"
        class="block uppercase py-4 px-14 bg-mustard-yellow w-fit rounded-full hover:bg-medium-blue duration-300 text-medium"
        >Download Now</a
      >
    </div>
  </section>

  <section class="py-24 px-5">
    <div class="max-w-[95rem] mx-auto flex flex-col items-center">
      <h2 class="uppercase text-medium-blue font-bold tracking-widest">
        Any Level, Any Time
      </h2>
      <h3 class="text-5xl font-bold leading-tight text-dark-blue text-center">
        Pilot Training Programs
      </h3>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 mt-10 gap-7">
        {
          flightPrograms.map((program) => (
            <FlightProgramCard
              imagePath={program.imagePath}
              heading={program.heading}
              subheading={program.subheading}
              description={program.description}
            />
          ))
        }
      </div>
      <button
        class="flex items-center gap-3 font-medium uppercase py-4 px-14 bg-dark-blue w-fit rounded-full text-white hover:bg-mustard-yellow duration-300"
      >
        <p>View all training programs</p>
        <IoIosArrowForward className="text-xl" />
      </button>
    </div>
  </section>

  <section class="px-5 text-white">
    <div class="max-w-7xl mx-auto grid lg:grid-cols-4">
      {
        stats.map((stat) => (
          <StatCard icon={stat.icon} value={stat.value} title={stat.title} />
        ))
      }
    </div>
  </section>

  <section class="py-24 px-5 bg-light-blue/10">
    <div class="max-w-7xl mx-auto flex flex-col items-center">
      <h2 class="uppercase text-medium-blue font-bold tracking-widest">
        Customers Feedback
      </h2>
      <h3
        class="text-5xl font-bold leading-tight text-dark-blue text-center max-w-xl"
      >
        What they're talking about our flight services
      </h3>
      <div class="grid lg:grid-cols-2 mt-10 gap-7">
        {
          reviews.map((review) => (
            <ReviewCard review={review.review} name={review.name} />
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>
