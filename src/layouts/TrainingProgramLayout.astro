---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Banner from "../assets/first-time-pilots-banner.jpg";
import FlightTrainingNavbar from "../components/FlightTrainingNavbar.astro";
import BigCTA from "../components/BigCTA.astro";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { FaArrowAltCircleRight } from "react-icons/fa";
import FlightProgramCard from "../components/FlightProgramCard.astro";
import { flightPrograms } from "../data/flightPrograms";
import PricingComponent from "../components/PricingComponent";
const { imagePath, title, locations, description, tiers } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp}",
);
if (!images[imagePath]) {
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`,
  );
}
---

<BaseLayout
  siteTitle="Our Training Programs"
  siteDescription="Begin your aviation journey with High Tide Aviation, offering comprehensive guidance and support for first-time pilots in Southport, NC, and St. Simons Island, GA."
  siteKeywords="first-time pilot Southport NC, beginner flight training St. Simons Island GA, aviation introduction Southeast Coast, learn to fly Southport NC, pilot training for beginners."
>
  <Header slot="header" image={Banner} title={title} ctaText="Enroll Now" />

  <section class="max-w-6xl mx-auto py-16 px-5">
    <div class="flex flex-col md:flex-row gap-10">
      <div class="min-w-72 flex flex-col gap-5">
        <FlightTrainingNavbar />
        <BigCTA />
      </div>
      <div class="flex flex-col gap-5">
        <div
          class="bg-dark-blue border-l-8 flex flex-col border-mustard-yellow text-white p-5 gap-2 items-center"
        >
          <p class="uppercase text-xl">
            {title} is available in
          </p>
          <ul class="flex gap-10">
            {
              locations.map((location) => (
                <li class="text-xl font-medium tracking-wider">{location}</li>
              ))
            }
          </ul>
        </div>
        <Image
          src={images[imagePath]()}
          alt={title}
          class="w-full h-full object-cover"
          quality={10}
        />
      </div>
    </div>

    <div class="flex flex-col my-8 gap-3">
      <h2 class="text-4xl font-medium text-dark-blue">{title} Training</h2>
      {
        description.map((paragraph) => (
          <p class="text-gray-600 leading-loose">{paragraph}</p>
        ))
      }

      <div class="flex gap-5">
        <div class="flex-1">
          <h2 class="text-2xl font-medium text-dark-blue">
            Enrollment Process
          </h2>
          <h3 class="text-xl font-medium text-medium-blue max-w-md mt-5">
            Lorem ipsum dolor sit amet consectetur adipisicing elit.
          </h3>
          <ul class="flex flex-col gap-1 mt-5">
            <li class="flex items-center gap-3">
              <FaArrowAltCircleRight className="text-mustard-yellow size-5" />
              <p class="text-dark-blue font-medium">
                Praesent efficitur quam sit amet
              </p>
            </li>
            <li class="flex items-center gap-3">
              <FaArrowAltCircleRight className="text-mustard-yellow size-5" />
              <p class="text-dark-blue font-medium">
                Nunc cursus dolor id purus euismod
              </p>
            </li>
            <li class="flex items-center gap-3">
              <FaArrowAltCircleRight className="text-mustard-yellow size-5" />
              <p class="text-dark-blue font-medium">
                Quisque tincidunt eros ac place viverra
              </p>
            </li>
          </ul>
        </div>
        <div class="flex-1">
          <h2 class="text-2xl font-medium text-dark-blue">
            Program Prerequisites
          </h2>
          <h3 class="text-xl font-medium text-medium-blue max-w-md mt-5">
            Lorem ipsum dolor sit amet consectetur adipisicing elit.
          </h3>
          <ul class="flex flex-col gap-1 mt-5">
